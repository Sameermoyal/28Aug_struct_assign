//Product Structure: Define a structure Product that contains the product name, price, and quantity. Write a program to calculate the total price for 10 different products using an array of structures.


#include<bits/stdc++.h>
using namespace std;

struct Product{
    string p_name;
    int price;
    int qunt;
      
};

int main(){
    int n;
    cout<<"enter total  Products Quantity :  ";
    cin >>n ;
    Product obj[n];
    for(int i=0;i<n;i++){
        cout<<"enter Product name: ";
        cin>>obj[i].p_name;
        cout<<"enter Product price : ";
        cin>>obj[i].price;
        cout<<"ente Product Quantity : ";
        cin>>obj[i].qunt;
        
    }
    int sum;
    for(int i=0;i<n;i++){
        
        sum +=obj[i].price * obj[i].qunt;
    }
    
    cout<<sum;
    
}